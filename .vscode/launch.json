{
   "version": "2.0.0",
   "configurations": [
      {
         "name": "Debug C++ (LLDB)",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/bin/${relativeFileDirname}/${fileBasenameNoExtension}",
         "args": [],  
         "stopAtEntry": false,
         "cwd": "${workspaceFolder}",
         "externalConsole": true,  // Opens a separate terminal for input handling
         "MIMode": "lldb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for LLDB",
               "text": "settings set target.max-children-count 256",
               "ignoreFailures": true
            }
         ],
         "preLaunchTask": "C/C++: clang++ build active file"
      }
   ]
}
